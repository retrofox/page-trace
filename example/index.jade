!!!5
html
  head
    title page-trace
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    style
      body {
        font: 300 14px "Helvetica Neue", Helvetica, Arial;
        padding: 10px 50px;
      }

      #trace {
        background-color: #f5f5f5;
        padding: 5px;
      }

      #trace li {
        border-bottom: 1px solid #ccc;
        padding: 2px 5px;
      }

  body
    div
      h2 Sections
      ul
        li: a(href="home") home
        li: a(href="about") about
        li: a(href="contact") contact
    div#trace
      h3 Trace
      ol

    script(src="build.js")
    script
      var page = require('visionmedia-page.js');
      var o = require('component-jquery');
      var pagetrace = require('page-trace');
      var el = o('#trace ol');

      page('/:page?', pagetrace, function(ctx){
        if (!ctx.trace.length) return; 
        el.prepend(o('<li>', { text: ctx.trace[0] }));
      });

      page();
